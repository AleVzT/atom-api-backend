{
    "compilerOptions": {
      "target": "ES2021",
      "module": "commonjs",
      "lib": ["ES2021"],
      "rootDir": "src",
      "outDir": "lib",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "noImplicitAny": true,
      "types": ["jest", "node"],
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib", "dist"]
  }
  